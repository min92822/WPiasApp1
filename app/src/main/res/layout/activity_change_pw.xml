<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include17"
        layout="@layout/title_bar_grey" />

    <TextView
        android:id="@+id/textView89"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="변경할 비밀번호를 입력해주세요"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include17" />

    <EditText
        android:id="@+id/currentPw"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_shape3"
        android:focusable="false"
        android:hint="현재 비밀번호"
        android:inputType="textPassword"
        android:lineHeight="18dp"
        android:paddingLeft="10dp"
        android:textColorHint="#5e5e5e"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView89" />

    <EditText
        android:id="@+id/toChangePw"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:lineHeight="18dp"
        android:inputType="textPassword"
        android:hint="변경할 비밀번호"
        android:textColorHint="#5e5e5e"
        android:focusable="false"
        android:textSize="12dp"
        android:background="@drawable/edit_text_shape3"
        app:layout_constraintEnd_toEndOf="@+id/currentPw"
        app:layout_constraintStart_toStartOf="@+id/currentPw"
        app:layout_constraintTop_toBottomOf="@+id/currentPw" />

    <TextView
        android:id="@+id/warnChangePw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#ff0000"
        app:layout_constraintStart_toStartOf="@+id/toChangePw"
        app:layout_constraintTop_toBottomOf="@+id/toChangePw" />

    <EditText
        android:id="@+id/toChangePwCheck"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:lineHeight="18dp"
        android:inputType="textPassword"
        android:hint="변경할 비밀번호 확인"
        android:textColorHint="#5e5e5e"
        android:focusable="false"
        android:textSize="12dp"
        android:background="@drawable/edit_text_shape3"
        app:layout_constraintEnd_toEndOf="@+id/toChangePw"
        app:layout_constraintStart_toStartOf="@+id/toChangePw"
        app:layout_constraintTop_toBottomOf="@+id/toChangePw" />

    <TextView
        android:id="@+id/warnChangePwCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#ff0000"
        app:layout_constraintStart_toStartOf="@+id/toChangePwCheck"
        app:layout_constraintTop_toBottomOf="@+id/toChangePwCheck" />

    <TextView
        android:id="@+id/textView102"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="비밀번호는 6자리 이상으로 입력해주세요"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toChangePwCheck" />

    <Button
        android:id="@+id/pwChangeSubmit"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_blue"
        android:lineHeight="24dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/toChangePwCheck"
        app:layout_constraintStart_toStartOf="@+id/toChangePwCheck"
        app:layout_constraintTop_toBottomOf="@+id/textView102" />

</androidx.constraintlayout.widget.ConstraintLayout>