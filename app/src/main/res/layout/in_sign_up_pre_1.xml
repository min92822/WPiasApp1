<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btn_sign_up_pre_close_1"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout38"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up_pre_close_1" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="개인정보 수집 및 이용에 대한 동의"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout38" />

    <TextView
        android:id="@+id/textView56"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="회사는 WPIAS서비스 제공을 위하여 다음과 같이 고객님의 개인정보를 수집 및 이용합니다."
        android:textColor="@color/warm_grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView55" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white_three"
        android:padding="0.5dp"
        app:layout_constraintEnd_toEndOf="@+id/textView56"
        app:layout_constraintStart_toStartOf="@+id/textView56"
        app:layout_constraintTop_toBottomOf="@+id/textView56">

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@color/white_two"
                android:gravity="center"
                android:text="구분"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white_two"
                android:gravity="center"
                android:text="수집항목"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white_two"
                android:gravity="center"
                android:text="수집·이용목적"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white_two"
                android:gravity="center"
                android:text="이용·보유기간"
                android:textSize="11dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_margin="0.5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="필수"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="이메일, 생년월일, \n성별, 사진"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="화상정보 분석을 위한 기초 데이터 확보"
                android:textSize="11dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:gravity="center"
                android:padding="8dp"
                android:text="반영구적"
                android:textSize="11dp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView57"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="귀하는 회사의 개인정보 수집 및 이용에 대한 동의를 거부할 수 있습니다. 단, 동의를 거부하실 경우 서비스 이용이 불가합니다."
        android:textColor="@color/warm_grey"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>