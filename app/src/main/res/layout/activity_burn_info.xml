<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BurnInfoActivity">

    <include
        android:id="@+id/include3"
        layout="@layout/title_bar_skyblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_burn_info_top"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:src="@drawable/btn_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/burn_tabLayout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_burn_info_top"
        app:tabIndicatorColor="@color/windows_blue"
        app:tabIndicatorHeight="5dp"
        app:tabTextAppearance="@style/tabText" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/burn_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/pale_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burn_tabLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>