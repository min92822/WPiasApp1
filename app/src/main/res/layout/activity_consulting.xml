                    android:background="@drawable/edit_text_shape2"
                    android:spinnerMode="dialog"
                    app:layout_constraintTop_toTopOf="@+id/city"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/city"
